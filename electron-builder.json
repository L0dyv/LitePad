{
    "appId": "com.litepad.notebook",
    "productName": "LitePad速记本",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "dist-electron/**/*"
    ],
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "assets/icon.ico"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "LitePad速记本"
    },
    "portable": {
        "artifactName": "${productName}-Portable-${version}.${ext}"
    }
}