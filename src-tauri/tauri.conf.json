{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LitePad",
  "version": "2.1.5",
  "identifier": "com.litepad.app",
  "build": {
    "beforeDevCommand": "npm run sync:version && npm run dev:web",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run sync:version && npm run build:web",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost litepad: data:; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' http://127.0.0.1:7243 ws://localhost:5173 ws://127.0.0.1:5173"
    },
    "windows": [
      {
        "title": "LitePad",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "decorations": false,
        "transparent": false,
        "visible": true,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "focus": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": [],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
